extends layout

block content
    div.container(style="width:475px")
        h1(style="text-align:center;") Login
        div.jumbotron
            form(method="post")
                div.form-group
                    label Username
                    input.form-control(type="username",name="username", required)
                div.form-group
                    label Password
                    input.form-control(type="password", name="password", required)
                button.btn.btn-default Submit              
                a(href='/users/register', class='button btn btn-default' style='margin-left:10px') Register
                div(style='float:right')
                    a(href='passwordreset') Forgot Password?<br>
                    a(href='username') Forgot Username?
        p #{message}
